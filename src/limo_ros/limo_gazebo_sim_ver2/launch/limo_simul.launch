<launch>
  <!-- ===== 공통 인자 ===== -->
  <arg name="use_sim_time" default="true"/>
  <arg name="rviz"         default="false"/>
  <arg name="entity"       default="with_robot"/>

  <!-- 스폰 포즈 -->
  <arg name="spawn_x"      default="2.462316"/>
  <arg name="spawn_y"      default="-2.132038"/>
  <arg name="spawn_z"      default="0.03"/>
  <arg name="spawn_roll"   default="0.0"/>
  <arg name="spawn_pitch"  default="0.000002"/>
  <arg name="spawn_yaw"    default="0.130703"/>

  <!-- ===== 패키지/파일 경로 ===== -->
  <!-- 반드시 '패키지명'에 find를 사용 -->
  <arg name="pkg_path" default="$(find limo_gazebo_sim_ver2)"/>
  <!-- world/xacro/rviz 경로는 pkg_path에 이어붙이기 -->
  <!-- <arg name="world_path" default="$(arg pkg_path)/worlds/my_track.world"/> -->
  <arg name="world_path" default="$(arg pkg_path)/worlds/empty_world.world"/>
  <arg name="xacro_path" default="$(arg pkg_path)/urdf/ferrari.xacro"/>
  <arg name="rviz_cfg"   default="$(arg pkg_path)/config/drive.rviz"/>

  <!-- 시뮬레이션 시간 -->
  <param name="use_sim_time" value="$(arg use_sim_time)"/>

  <!-- ===== Gazebo 구동 (ROS1) =====
       .world 파일을 직접 include 하는 게 아니라
       gazebo_ros의 empty_world.launch를 include 합니다. -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name"   value="$(arg world_path)"/>
    <arg name="paused"       value="false"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="gui"          value="true"/>
    <arg name="headless"     value="false"/>
    <arg name="debug"        value="false"/>
  </include>
</launch>